{
  "compilerOptions": {
    "baseUrl": "",
    "paths": {
      "@typescript/*": ["types/*"],
      "@store/*": ["store/*"],
      "@components/*": ["components/*"],
      "@styles/*": ["styles/*"],
      "@ui/*": ["UI/*"],
      "@context/*": ["context/*"],
      "@layouts/*": ["layouts/*"],
      "@hoc/*": ["hoc/*"],
      "@hooks/*": ["hooks/*"],
      "@common/*": ["common/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
